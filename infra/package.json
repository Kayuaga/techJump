{
  "name": "infra",
  "version": "1.0.0",
  "description": "This is kubernetes infrastructure",
  "main": "index.js",
  "scripts": {
    "infra:deploy": "kubectl apply -k $PROJECT_NAME -n=$NAME_SPACE",
    "infra:change:docker:image": "kubectl set deployments/$PROJECT_NAME $PROJECT_NAME=$DOCKER_IMAGE -n=$NAME_SPACE",
    "infra:apply:configmap": "kubectl apply -f $PROJECT_NAME/configMap.yaml -n=$NAME_SPACE",
    "infra:create:namespace": "kubectl create namespace $NAME_SPACE",
    "infra:update:configmap": "kubectl patch configmap $CONFIG_MAP_NAME --type=merge -p \"{\\\"data\\\": {\\\"$VARIABLE_NAME\\\": \\\"$VALUE\\\"}}\" -n=$NAME_SPACE"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kayuaga/techJump.git"
  },
  "private": true
}
